<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity">

    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"

        />

    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email and we will send u the instructions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="	#808080"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtForgot"
        android:layout_margin="20dp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/etSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/txtInstruction"
        android:hint="Enter Your Email "
        android:textSize="18sp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btnForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/etSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#66bfbf"
        android:textSize="18sp"
        android:textStyle="bold"
        />

</RelativeLayout>